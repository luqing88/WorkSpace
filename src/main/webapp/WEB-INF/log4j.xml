<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="defaultAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/dev/yunospass/default.log" />
        <param name="append" value="true" />
        <param name="maxFileSize" value="50MB" />
        <param name="maxBackupIndex" value="50" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %C{6}(%L) - %m%n" />
        </layout>
    </appender>
    <root>
        <level value="INFO"/>
        <appender-ref ref="defaultAppender" />
        <!--  <appender-ref ref="dragoonAppender" />-->
    </root>
</log4j:configuration>