	<insert id="insert_user" parameterType="UserModel">	
		INSERT INTO FRFY_USER(name,password,role,sex,phone,age,createDate,modifyDate,description,status
		) VALUES(#{name},#{password},#{role},#{sex},#{phone},#{age},#{createDate},#{modifyDate},#{description},#{status})
	</insert>
	
	<update id="update_user" parameterType="UserModel">
		UPDATE FRFY_USER SET name=#{name},password=#{password},
		               role=#{role},sex=#{sex},
		               phone=#{phone},age=#{age},
		               modifyDate=#{modifyDate},createDate=#{createDate},
		               description=#{description},status=#{status} WHERE id=#{id}
	</update>

	<delete id="delete_user" parameterType="long">
		DELETE FROM FRFY_USER WHERE id=#{id}
	</delete>
	
	<select id="select_user_name" parameterType="String"
		resultType="UserModel">
		SELECT * FROM FRFY_USER WHERE name= #{name}
	</select>

